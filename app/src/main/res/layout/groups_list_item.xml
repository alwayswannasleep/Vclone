<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/group_list_item_horizontal_margin"
                android:layout_marginRight="@dimen/group_list_item_horizontal_margin">

    <LinearLayout
        android:id="@+id/group_list_item_main_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/group_list_item_avatar"
            android:layout_width="@dimen/group_list_item_avatar_size"
            android:layout_height="@dimen/group_list_item_avatar_size"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/group_list_item_text_horizontal_margin"
            android:layout_marginRight="@dimen/group_list_item_text_horizontal_margin">

            <TextView
                android:id="@+id/group_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/group_list_item_name_text_size"/>

            <TextView
                android:id="@+id/group_list_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/group_list_item_type_text_size"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@+id/group_list_item_main_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/friend_list_item_separator_height"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>